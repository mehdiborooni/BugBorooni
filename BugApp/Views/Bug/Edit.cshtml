@using Microsoft.AspNetCore.Razor.Language.Intermediate
@using Microsoft.EntityFrameworkCore.Infrastructure
@model BugApp.Models.Bug

<h2>Edit</h2>

<hr/>

<form asp-action="Edit" asp-controller="Bug" method="post">
    <input asp-for="Id" hidden />
    <input asp-for="TimeCreated" hidden />

    <p><input asp-for="Name" class="form-control" placeholder="Name" /></p>
    <p><textarea asp-for="Desc" class="form-control" placeholder="Desc"></textarea></p>

    <p>
        <button type="submit" class="btn btn-success">Save</button>
        <a asp-action="Index" asp-controller="Bug">Back to list</a>
    </p>
</form>